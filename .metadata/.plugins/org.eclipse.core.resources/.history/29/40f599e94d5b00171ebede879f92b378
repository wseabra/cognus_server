package br.com.csm.entidade;

import org.hibernate.cfg.AnnotationConfiguration;
import org.hibernate.tool.hbm2ddl.SchemaExport;

import com.mchange.v1.db.sql.Schema;

public class criarTabelas {
	
	public static void main(String[] args) {
		
		AnnotationConfiguration cfg = new AnnotationConfiguration();
		
		cfg.addAnnotatedClass(Usuario.class);
		cfg.addAnnotatedClass(Topico.class);
		cfg.addAnnotatedClass(Pergunta.class);
		cfg.addAnnotatedClass(Resposta.class);
		cfg.addAnnotatedClass(Seguidores.class);
		
		SchemaExport schema = new SchemaExport(cfg);
		
		schema.create(true,true);
		
	}

}
